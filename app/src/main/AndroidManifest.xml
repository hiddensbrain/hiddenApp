<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="hiddenbrain.hiddensApp">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="hiddenbrain.hiddensApp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ListActivity"
                  android:label="@string/list_title"></activity>

        <activity android:name=".LightActivity"
                  android:label="@string/light_title"></activity>


        <activity android:name="hiddenbrain.hiddensApp.RegisterFormActivity"
                  android:label="@string/present_title"></activity>

        <activity android:name="hiddenbrain.hiddensApp.RegisterFinalActivity"
                  android:label="@string/gotPresent_title"></activity>

        <activity android:name=".SherlockStartActivity"
                  android:label="@string/sherlockstart_title"></activity>

        <activity android:name=".SherlockFinalActivity"
                  android:label="@string/sherlockfinal_title"></activity>
    </application>

</manifest>